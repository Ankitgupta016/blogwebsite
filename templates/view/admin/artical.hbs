<html>

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta property="image" content="img/apple-touch-icon.png" />
  <meta name="author" content="Ankit gupta" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="theme-color" content="#000000" />
  <title>WanderWords-food,health,travel,share market and meny more blog
  </title>
  <link rel="icon" type="image/x-icon" href="img/favicon.ico" />
  <link href="../css/bootstrap.min.css" rel="stylesheet" />
  <link type="text/css" rel="stylesheet" href="css/admidash.css" />
  <link type="text/css" rel="stylesheet" href="css/style.css" />

<style>
    .custom-file-upload input[type="file"] {
        display: none;
        cursor: pointer;
      }
    input,.custom-file-upload {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: none;
    outline: none;
    background: white;
    
    }
</style>
</head>

<body>

  <header>

    <div class="logosec">
      <div class="logo">
        <img src="img/logo.png" alt="logo" class="mt-1 mb-2 rounded-2" width="30" height="20" /><span
          class="web-logo">W</span>ander<span class="web-logo">W</span>ords
      </div>
      <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210182541/Untitled-design-(30).png"
        class="icn menuicn" id="menuicn" alt="menu-icon" />
    </div>

    <div class="message">

      <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183322/8.png" class="icn" alt="" />
      <div class="dp">
        <img src="userImages/{{admin.image}}" alt="Your avatar" class="dpicn" alt="dp" />
      </div>
    </div>

  </header>
  <div class="main-container">

    <div class="navcontainer">
      <nav class="nav">
        <div class="nav-upper-options">
          <div class="nav-option  text-white ">
            <img src="img/icon.png" class="nav-img" alt="Home" />
            <a href="/admin/home">
              <h3>Home</h3>
            </a>

          </div>

          <div class="nav-option ">
            <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210182148/Untitled-design-(29).png"
              class="nav-img" alt="dashboard" />
            <a href="/admin/deshboard">
              <h3>Dashboard</h3>
            </a>

          </div>

          <div class="option2 nav-option">
            <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183322/9.png" class="nav-img"
              alt="articles" />
            <a href="/admin/createpost">
              <h3> Articles</h3>
            </a>
          </div>

          <div class="nav-option option5">
            <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183323/10.png" class="nav-img"
              alt="blog" />
            <a href="/admin/adminprofile">
              <h3> Profile</h3>
            </a>
          </div>
          <div class="nav-option logout">
            <img src="https://media.geeksforgeeks.org/wp-content/uploads/20221210183321/7.png" class="nav-img"
              alt="logout" />
            <a href="/admin/logout">
              <h3>Logout</h3>
            </a>
          </div>

        </div>
      </nav>

    </div>

    <div class="container p-3">
      <div class=" mb-3">
        <h1 style="font-weight: 900;"> Add Post</h1>
      </div>
      <form method="post" class="ps-3" style="width: 99%;" enctype="multipart/form-data">

        <h3>Title</h3>

        <div>
          <input class="w-100 py-2 ps-3 shadow-none" type="text" name="title" id="title"
            placeholder="Enter blog title here" style="outline: none;">
        </div>

        <h3 class="mt-3 mb-2">Image</h3>

       <div class="input-div">
                <label class="custom-file-upload" style="text-align: start; padding: ; padding-left: 14px !important;">
                  <input type="file" name="image" id="image" accept="image/*" onchange="showFileName()"
                    class="form-control shadow-none" />
                  <span id="file-name" style="opacity: 0.5;">Upload 
                    picture</span>
                </label>
              </div>

        <h3 class=" mt-3 mb-2">Content</h3>

        <div>
          <textarea class="w-100 ps-3 pt-3 shadow-none" name="content" id="content" rows="10"
            placeholder="Enter blog content" style="outline: none;"></textarea>
        </div>

        <input type="submit" value="Add Post"
          class="btn btn-outline-primary mt-4 px-4 py-2 w-50 m-auto d-flex justify-content-center mb-3">
        {{#if error}}
        <p style="font-weight: 700; color:#ff0606">{{this.error}}</p>
        {{else}}
        <p style="font-weight: 700; color:rgb(60, 255, 6)">{{this.message}}</p>
        {{/if}}
      </form>

    </div>
  </div>

  <script>
    let menuicn = document.querySelector(".menuicn"); let nav =
      document.querySelector(".navcontainer"); menuicn.addEventListener("click",
        () => { nav.classList.toggle("navclose"); })

    function showFileName() {
      var input = document.getElementById('image');
      var fileName = input.value.split('\\').pop(); var fileNameSpan =
        document.getElementById('file-name'); if (fileName) {
          fileNameSpan.innerHTML = fileName;
        } else {
        fileNameSpan.innerHTML =
          'Upload profile picture';
      }
    }
  </script>
</body>

</html>