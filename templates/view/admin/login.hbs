<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

 <title>WanderWords-food,health,travel,share market and meny more blog
    </title>
  <link href="../css/bootstrap.min.css" rel="stylesheet" />
  <link rel="icon" type="image/x-icon" href="img/favicon.ico" />

  <script src="https://kit.fontawesome.com/780468c39f.js" crossorigin="anonymous"></script>

  <link type="text/css" rel="stylesheet" href="css/style.css" />
  <link type="text/css" rel="stylesheet" href="css/respo.css" />
  <link type="text/css" rel="stylesheet" href="css/login.css" />

</head>

<body>



 
  <section class="">
    <div class="container py-5 ">
      <div class="row d-flex align-items-center justify-content-center">
        <div class="d-flex  mb-3 pb-1 justify-content-center navbar-brand">
          <img src="/img/logo.png" alt="logo" class=" mt-1 mb-2 rounded-2" width="30" height="20" />
         <a class="anima"> <span class="web-logo2">W</span>ander<span class="web-logo2">W</span>ords</a>
        </div>

        <div class="col-md-8 col-lg-7 col-xl-6">
          <img src="img/draw2.svg" class="img-fluid" alt="Phone image">
        </div>
        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
          <form class="signin-form" action="" method="post">

            <h5 class="fw-normal mb-2 pb-2 mt-2" style="letter-spacing: 1px;">Sign into your account</h5>
            <!-- Email input -->
            <div class="form-outline mb-3">
              <label class="form-label">Email address</label>

              <input type="email" name="email" id="email" class="form-control form-control-lg shadow-none"
                placeholder="Enter your email" style="font-size: medium ; !important" />
            </div>

            <!-- Password input -->
            <div class="form-outline mb-3">
              <label class="form-label" for="form1Example23">Password</label>

              <input type="password" name="password" id="password" class="form-control  form-control-lg shadow-none"
                placeholder="Enter your password" />

            </div>

            <div class=" d-flex  justify-content-between mt-0">
              <a class="Forget  text-primary " href="/admin/forget">
                Forget Password?
              </a>

            </div>

            <!-- Submit button -->

            <div class="d-flex  justify-content-between">
              <input type="reset" value="Reset Form" />
              <input type="submit" value="Sign In" />
            </div>
            <div>
              <p class="small fw-lighter mt-2 pt-1 mb-0">Don't have an account? <a class="SignUp-page-link"
                  href="/Signup">
                  Sign Up
                </a></p>
            </div>


            {{#if error}}
            <p style="font-weight: 700; color:rgb(255, 6, 6)" class="mt-3">{{this.error}}</p>
            {{else}}
            <p style="font-weight: 700; color:rgb(60, 255, 6)" class="mt-3">{{message}}</p>
            {{/if}}
          </form>
        </div>
      </div>
    </div>
  </section>

  <script src="../jq/jquery.js" type="text/javascript"></script>
  <script src="../js/bootstrap.js" type="text/javascript"></script>
</body>

</html>