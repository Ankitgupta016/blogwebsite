<body style="background-color: #1f2029;">
  <div class="signin-form-container" style="height: 100vh;">
    <form class="signin-form" action="" method="post">
      <img src="img/logo.png" alt="logo" class=" mt-1 mb-2 rounded-2" width="130" />
      <div class="mb-3 text-white">
        <p>Please enter the email address you'd like <br> your password reset information sent to </p>
      </div>
      <div class="form-group-login">
        <input type="email" name="email" id="email" class="form-control shadow-none" placeholder="Enter your email" required />
        <i class="far fa-at input-icon " style="top: 0px ; font-size: 19px; "></i>

      </div>
      <div class="mb-3 d-flex justify-content-center align-items-center">
        <input class=" btn btn-primary text-center shadow-none " type="submit" value="Reset password">
      </div>

      <div class="mb-3">
        <p class=" text-center text-white">Back a Login Page <a href="/admin/"> Log&nbsp;in</a></p>
      </div>

      <div class="mb-3">
        {{#if error}}
        <p style="color: rgb(252, 21, 5);">{{this.error}}</p>

        {{else}}
        <p style="color: green;">{{message}}</p>
        {{/if}}
      </div>
    </form>

  </div>


  <script src="../jq/jquery.js" type="text/javascript"></script>
  <script src="../js/bootstrap.js" type="text/javascript"></script>

</body>

</html>