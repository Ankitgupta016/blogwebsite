<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Codingwallah-is a develop a new contry for coding </title>
  <link href="../css/bootstrap.min.css" rel="stylesheet" />

  <link rel="icon" type="image/x-icon" href="img/favicon.ico" />
  <script src="https://kit.fontawesome.com/780468c39f.js" crossorigin="anonymous"></script>

  <link type="text/css" rel="stylesheet" href="css/style.css" />
  <link type="text/css" rel="stylesheet" href="css/respo.css" />
  <link type="text/css" rel="stylesheet" href="css/signup.css" />
  <style>
    .error-message {
      color: red;
      font-weight: 200;
      font-size: 10px;
      font-family: sans-serif;
    }

    .success-message {
      color: green;
      font-weight: 200;
      font-size: 10px;
      font-family: sans-serif;
    }
  </style>
</head>

<body onload="myFunction()">
  <!-- PreLoader -->
  <div class="loader">
    <div class="loader-inner">
      <div class="circle"></div>
    </div>
  </div>
  <!-- PreLoader Ends -->


  {{>layout}}
  <div style="padding-top: 3.8rem;"></div>

  <section class="" style="background-color: #eee;">
    <div class="container-fluid p-2">
      <div class="row d-flex justify-content-center align-items-center">
        
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body ">
              <div class="d-flex  mb-1  justify-content-center navbar-brand">
          <img src="/img/logo.png" alt="logo" class=" mt-1 mb-2 rounded-2" width="30" height="20" />
          <a class="anima"><span
            class="web-logo">W</span>ander<span class="web-logo">W</span>ords</a>
        </div>
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-1">
                  <img src="img/draw1.webp" class="img-fluid" alt="Sample image">
                </div>

                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-2">

                  <h3 class="mb-3">Create your account</h3>
                  <form class="signup-form" action="signup" method="post" enctype="multipart/form-data">
                    <div class="form-group">

                      <div class="input">
                        <div class="input-div">
                          <label for="name" style="text-align: start;">Full Name</label>
                          <input type="text" name="name" id="name" placeholder="Your Name" required />

                          <span id="error" class="error-message"></span>
                          <span id="success" class="success-message"></span>
                        </div>
                        <div class="input-div">

                          <label for="image" style="text-align: start;">Profile Picture</label>
                          <label class="custom-file-upload"
                            style="text-align: start; padding: ; padding-left: 14px !important;">
                            <input type="file" name="image" id="image" accept="image/*" onchange="showFileName()"
                              class="form-control shadow-none" />
                            <span id="file-name" style="opacity: 0.5;">Upload profile
                              picture</span>
                          </label>
                        </div>

                      </div>
                    </div>
                    <div class="form-group">

                      <div class="input">
                        <div class="input-div">
                          <label for="number" style="text-align: start;">Number</label>
                          <input type="number" name="number" id="number" placeholder="Your Number" required />
                          <span id="error-message" class="error-message"></span>
                          <span id="success-message" class="success-message"></span>
                        </div>
                        <div class="input-div">
                          <label for="Email" style="text-align: start;">Email</label>
                          <input type="email" name="email" id="email" placeholder="Your Email" required />
                          <span id="email-error" class="error"></span>
                          <span id="email-success" class="success"></span>
                        </div>
                      </div>
                    </div>
                    <div class="form-groups">

                      <div class="input-div">
                        <label for="password" style="text-align: start;">Password</label>
                        <input type="password" name="password" id="password" placeholder="Create password"
                          pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}"
                          title="Password must contain at least one digit, one lowercase letter, one uppercase letter, and be at least 6 characters long"
                          required />
                        <span id="password-error" class="error"></span>
                        <span id="password-success" class="success"></span>
                      </div>

                    </div>
                    <div class="d-flex justify-content-between mt-2">
                      <input type="reset" value="Reset Form" />
                      <input type="submit" value="Create account" />
                    </div>
                    <div class="SignUp-page mt-1">
                      Already have an account?
                      <a class="SignUp-page-link" href="/Signin">Sign In</a>
                    </div>
                    {{#if error}}
                    <p style="font-weight: 700; color:rgb(255, 6, 6)">{{this.error}}</p>
                    {{else}}
                    <p style="font-weight: 700; color:rgb(60, 255, 6)">{{message}}</p>
                    {{/if}}

                    <p class="text">
                      By clicking “Sign up”, you agree to our
                      <a href="/terms&Conditions">Terms & Conditions</a>
                      and
                      <a href="/Privacy&Policy">Privacy & Policy</a>
                    </p>
                  </form>


                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {{>footer}}

  <script src="js/signup.js"></script>